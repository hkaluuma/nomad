<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FacilitiesActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar11"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:titleTextColor="@color/white"
        app:title="Facilities"/>
    <!-- need to be spinners,subdistrict,facilitylevel,ownership,authority,status-->
    <EditText
        android:id ="@+id/fac_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:hint="@string/name"
        android:inputType="text"
        android:importantForAutofill="no"
        tools:ignore="VisualLintTextFieldSize" />

    <!-- need to put them in a spinner,spinner mode:dropdown-->
    <Spinner
        android:id="@+id/sub_district"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        />

    <Spinner
        android:id="@+id/faclevelOptions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/facility_level"
        android:layout_margin="5dp"
        />
    <Spinner
        android:id="@+id/facownerOptions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/ownership"
        android:layout_margin="5dp" />
    <Spinner
        android:id="@+id/fAuthorityOptions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="@string/authority"
        android:layout_margin="5dp"/>
    <Spinner
        android:id="@+id/facStatusOptions"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="@string/functional_status"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:hint="Dhis2id"
        android:layout_margin="5dp"
        tools:ignore="HardcodedText,LabelFor,VisualLintTextFieldSize"
        android:importantForAutofill="no" />
    <Button
        android:id="@+id/create_btn3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Create"
        android:textColor="#455A64"
        tools:ignore="HardcodedText" />

</LinearLayout>